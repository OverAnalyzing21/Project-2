<section class="w-100">
<h2 class="text-center display-4">Your Review Board</h2>
{{#if reviews.length}}
    <div class="container">
    <div class="post-list row">
        {{#each reviews as |review|}}
            {{>anime-card review}}
        {{/each}}
        </div>
    </div>
</section>
{{else}}
<div class="text-center w-100">
<h3>You Haven't Reviewed Anything Yet</h3>
<h4>hit search below to get started</h4>
<button onclick="location.href='/anime-search'" type="button">Click Here to Search</button>
</div>
{{/if}}