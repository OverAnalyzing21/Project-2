<div class="col-md-4">
    <div class="movie-card"><img
        src="{{anime.poster}}"
        class="img img-responsive"
      /> 
      <div class="movie-title">{{anime.title}}</div>
      <div class="movie-position"><a>{{#times anime_rating}}
        <i class="fas fa-star"></i> 
       {{/times}}</a>
       <p>{{shortened_review review_text}}</p></div>
    <div class="anime-overview">
        <div class="anime-overview">
            <div class="row text-center">
                <div class="col-xs-4">
                    <h3><a href="/users/{{user.username}}">@{{user.username}}</a></h3>
                </div>
                <div class="col-xs-4">
                    <h3><a href="/anime/{{anime.id}}">See More Reviews</a></h3>
                </div>
            </div>
        </div>
    </div>
</div>
</div>